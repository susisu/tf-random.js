{
  "extends": "@susisu",
  "parserOptions":{
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "env": {
    "es6": true
  },
  "overrides": [
    {
      "files": ["**/*.test.js"],
      "env": {
        "jest": true
      }
    },
    {
      "files": ["jest.config.js"],
      "parserOptions":{
        "sourceType": "script"
      },
      "env": {
        "node": true
      },
      "rules": {
        "max-len": "off"
      }
    },
    {
      "files": ["rollup.config.js"],
      "env": {
        "node": true
      }
    }
  ]
}
